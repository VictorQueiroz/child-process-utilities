{
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  }
}
